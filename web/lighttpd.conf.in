server.document-root = "@JUISE_WEB_DIR@"
server.tag  = "lighttpd/1.4.28 juisebox"
server.port = 3000
server.bind = "127.0.0.1"

server.modules = (
    "mod_auth", 
    "mod_expire",
    "mod_access",
    "mod_rewrite",
    "mod_cgi",
    "mod_juise",
    "mod_fastcgi",
    "mod_websocket",
)

juise.assign = ( 
    ".slax"  => "@prefix@/bin/juise --cgi",
    ".xhtml"  => "@prefix@/bin/juise --xml",
    "/rpc/"  => "@prefix@/bin/juise --rpc",
    "/local/"  => "@prefix@/bin/juise --cgi --local",
)

cgi.assign = ( ".php" => "@PHP_CGI@" )

debug.log-request-header = "enable"
debug.log-response-header = "enable"
debug.log-file-not-found = "enable"
debug.log-request-handling = "enable"

mimetype.assign = (
  ".html" => "text/html",
  ".xhtml" => "application/xhtml+xml",
  ".txt" => "text/plain",
  ".css" => "text/css",
  ".jpg" => "image/jpeg",
  ".png" => "image/png",
  ".ico" => "image/png",
  ".svg" => "image/svg+xml",
  ".js" => "application/javascript",
)

url.access-deny = ( "~", ".inc", ".conf" )
expire.url = ( "/static/images/" => "access 1 hours" )

